***************************** Ansible Server
mkdir playbook

vi first.yml
- hosts: web
  user: ansible
  sudo: yes
  connection: ssh
  gather_facts: no
  tasks:
  - name: Copy from the files directory test file
    action: copy src=/home/ansible/files/test4.txt dest=/home/ansible/test4.txt owner=ansible group=ansible mode=0655 backup=yes



vi tree.yml
- hosts: web
  user: ansible
  sudo: yes
  connection: ssh
  tasks:
  - name: Install tree software
    action: package name=tree state=latest

	
vi test.yml
---
- hosts: all
  user: ansible
  become: yes
  gather_facts: no
  tasks:

  - name: Install Apache Web Server
    action: yum name=httpd state=installed
  - name: Restart HTTPD
    action: service name=httpd state=restarted

vi webserver.yml
- hosts: web
  user: ansible
  sudo: yes
  connection: ssh
  gather_facts: no
  tasks:
  - name: Install Apache Web Server
    action: yum name=httpd state=installed
  - name: Restart HTTPD
    action: service name=httpd state=restarted

systemctl status httpd


ansible -m ping all
ansible-playbook first.yml
ansible-playbook tree.yml
ansible-playbook webserver.yml



